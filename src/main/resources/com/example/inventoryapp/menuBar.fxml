<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.inventoryapp.FirstScreenController">
   <children>
      <MenuBar layoutX="10.0" layoutY="10.0" prefWidth="600.0">
         <menus>
            <Menu mnemonicParsing="false" text="Category">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#showCategorySearchScreen" text="Search" />
                  <MenuItem mnemonicParsing="false" onAction="#showAddNewCategoryScreen" text="Add new Category" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Item">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#showItemSearchScreen" text="Search" />
                  <MenuItem mnemonicParsing="false" onAction="#showAddNewItemScreen" text="Add new Item" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Factory">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#showFactorySearchScreen" text="Search" />
                  <MenuItem mnemonicParsing="false" onAction="#showAddNewFactoryScreen" text="Add new Factory" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Store">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#showStoreSearchScreen" text="Search" />
                  <MenuItem mnemonicParsing="false" onAction="#showAddNewStoreScreen" text="Add new Store" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
   </children>
</AnchorPane>
