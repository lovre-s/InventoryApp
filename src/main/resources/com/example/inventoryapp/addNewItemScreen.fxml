            </GridPane.margin>
         </TextField>
         <TextField fx:id="itemProductionCostTextField" maxWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="6">
            <GridPane.margin>
               <Insets left="5.0" right="5.0" />
            </GridPane.margin>
         </TextField>
         <TextField fx:id="itemSellingPriceTextField" maxWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="7">
            <GridPane.margin>
               <Insets left="5.0" right="5.0" />
            </GridPane.margin>
         </TextField>
         <ChoiceBox fx:id="itemCatChoiceBox" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <GridPane.margin>
               <Insets left="5.0" right="5.0" />
            </GridPane.margin>
         </ChoiceBox>
         <Button mnemonicParsing="false" onAction="#onSaveItemButton" text="Save Item" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="8" />
