         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
         <Label text="Adding new Item" GridPane.columnSpan="2" GridPane.halignment="CENTER">
            <font>
               <Font name="System Bold" size="27.0" />
            </font>
         </Label>
         <Label text="Name:" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
         <TextField fx:id="itemNameTextField" maxWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
               <Insets left="5.0" right="5.0" />
            </GridPane.margin>
         </TextField>
         <Label text="Category:" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
