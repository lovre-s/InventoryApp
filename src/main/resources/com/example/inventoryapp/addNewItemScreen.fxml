            <GridPane.margin>
               <Insets left="5.0" right="5.0" />
            </GridPane.margin>
         </TextField>
         <TextField fx:id="itemHeightTextField" maxWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
            <GridPane.margin>
               <Insets left="5.0" right="5.0" />
            </GridPane.margin>
         </TextField>
         <TextField fx:id="itemLengthTextField" maxWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
